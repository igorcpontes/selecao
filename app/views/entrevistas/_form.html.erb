    <%= f.label :meio_transporte, "Qual seu meio de transporte?" %>
    <%= f.select :meio_transporte , @tipo_transporte %>
  </div>
  <div class="field">
    <%= f.label :observacao, "Observação:" %>
    <%= f.text_area :observacao, :size => "120x3" %>
  </div>
  <div class="field">
    <%= f.label :carteira_nacional_habilitacao %>
    <%= f.select :carteira_nacional_habilitacao , @sim_nao %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>