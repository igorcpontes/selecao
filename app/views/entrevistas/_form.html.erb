<%= form_for([@curriculo, @entrevista]) do |f| %>
  <% if @entrevista.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entrevista.errors.count, "error") %> prohibited this entrevista from being saved:</h2>

      <ul>
      <% @entrevista.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h3>Nome: <%= @curriculo.nome %></h3>
  </div>
  <div class="field">
    <%= f.label :data_nascimento, "Data de nascimento:" %>
    <%= f.date_select :data_nascimento, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :telefone, "Telefone:"%>
    <%= f.text_field :telefone, :id => "telefone" %>
  </div>
  <div class="field">
    <%= f.label :estado_civil, "Estado civil:" %>
    <%= f.select :estado_civil, @estado_civil %>
  </div>
  <div class="field">
    <%= f.label :filhos, "Tem filhos?" %>
    <%= f.select :filhos, @sim_nao %>
  </div>
  <div class="field">
    <%= f.label :quantos_filhos, "Quantos filhos?" %>
    <%= f.number_field :quantos_filhos %>
  </div>
  <div class="field">
    <%= f.label :mais_filhos, "Pretende ter mais filhos?" %>
    <%= f.select :mais_filhos, @sim_nao %>
  </div>
  <div class="field">
    <%= f.label :mora_com_quem, "Você mora com quem?" %>
    <%= f.text_field :mora_com_quem, :class => "body-75" %>
  </div>
  <div class="field">
    <%= f.label :casa_propria, "Casa própria?" %>
    <%= f.select :casa_propria, @sim_nao %>
  </div>
  <div class="field">
    <%= f.label :sustenta_casa, "Quem sustenta a casa?" %>
    <%= f.text_field :sustenta_casa %>
  </div>
  <div class="field">
    <%= f.label :escolaridade, "Escolaridade:" %>
    <%= f.select :escolaridade, @escolaridade %>
  </div>
  <div class="field">
    <%= f.label :parou_estudar, "Parou de estudar? Porquê?" %>
    <%= f.text_field :parou_estudar %>
  </div>
  <div class="field">
    <%= f.label :problema_de_saude, "Tem algum problema de saúde? Qual?" %>
    <%= f.text_field :problema_de_saude %>
  </div>
  <div class="field">
    <%= f.label :alergia, "Tem alergia a algum produto de limpeza?" %>
    <%= f.text_field :alergia %>
  </div>
  <div class="field">
    <%= f.label :ultimo_trabalho, "Qual foi o último local de trabalho?" %>
    <%= f.text_field :ultimo_trabalho %>
  </div>
  <div class="field">
    <%= f.label :funcao_ultimo_trabalho, "Qual função exerceu no último trabalho?" %>
    <%= f.text_field :funcao_ultimo_trabalho %>
  </div>
  <div class="field">
    <%= f.label :entrada_ultimo_trabalho, "Data de entrada:" %>
    <%= f.date_select :entrada_ultimo_trabalho %>
  </div>
  <div class="field">
    <%= f.label :saida_ultimo_trabalho, "Data de saída:" %>
    <%= f.date_select :saida_ultimo_trabalho %>
  </div>
  <div class="field">
    <%= f.label :motivo_saida, "Qual o motivo da saída?" %>
    <%= f.text_field :motivo_saida %>
  </div>
  <div class="field">
    <%= f.label :colocou_empresa_justica, "Já colocou alguma empresa na justiça? Porquê?" %>
    <%= f.text_field :colocou_empresa_justica %>
  </div>
  <div class="field">
    <%= f.label :preferencia, "Você prefere?" %>
    <%= f.select :preferencia, @preferencia_trabalho %>
  </div>
  <div class="field">
    <%= f.label :bebe, "Consome bebida alcoólica?" %>
    <%= f.select :bebe, @sim_nao_bebida %>
  </div>
  <div class="field">
    <%= f.label :fuma, "Você fuma?" %>
    <%= f.select :fuma , @sim_nao %>
  </div>
  <div class="field">
    <%= f.label :religiao, "Tem religião? Qual?" %>
    <%= f.text_field :religiao %>
  </div>
  <div class="field">
    <%= f.label :setor_gostaria_ocupar, "Setor que gostaria de ocupar?" %>
    <%= f.select :setor_gostaria_ocupar, @cargo_ocupar %>
