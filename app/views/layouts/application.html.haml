!!! 5
%html
%head
    %title Limport - Seleção de Funcionários Online
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

%body
    %nav.navbar.navabar-default
        .container
            .navbar-brand= link_to "Seleção de Funcionário", root_path

            %ul.nav.navbar-nav.navbar-right
                %li= link_to "Novo currículo", new_curriculo_path
                %li= link_to "Desconectar", root_path

    .container
        - flash.each do |name, msg|
            = content_tag :div, msg, class: "alert"

        = yield