!!! 5
%html
%head
    %title Limport - Seleção de Funcionários Online
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

%body
    %nav.navbar.navabar-default
        .container
            .navbar-brand= link_to "Seleção de Funcionário", root_path

            - if user_signed_in?
                %ul.nav.navbar-nav.navbar-right
                    %li= link_to "Novo currículo", new_curriculo_path, class: "btn btn-default"
                    %li= link_to "Administração", root_path, class: "btn btn-default"
                    %li= link_to "Registrar", new_user_registration_path, class: "btn btn-default"
                    %li= link_to "Desconectar", destroy_user_session_path, method: :delete, class: "btn btn-default"
            - else
                %ul.nav.navbar-nav.navbar-right
                    %li= link_to "Novo currículo", new_curriculo_path, class: "btn btn-default"
                    %li= link_to "Administração", root_path, class: "btn btn-default"
                    %li= link_to "Registrar", new_user_registration_path, class: "btn btn-default"
                    -#%li= link_to "Logar", new_user_session_path

    .container
        - flash.each do |name, msg|
            = content_tag :div, msg, class: "alert"

        = yield